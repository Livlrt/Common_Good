<div class="container footerfix">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <h2> Add your NGO </h2>
      <%= simple_form_for([@organization]) do |f| %>
        <%= f.input :name, placeholder: 'Enter the name of your NGO' %>
        <%= f.input :description, placeholder: 'Please describe the work of your NGO'%>

        <%= f.fields_for :photo do |ff| %>
          <%= ff.label :photo %>
          <%= ff.file_field :photo, multiple: true, name: "photos[]" %>
        <% end %>

        <hr>
        <%= f.submit class: "btn-medium"%>
        <%= link_to "Back", missions_path, class: 'btn btn-medium' %>
      <% end %>
      </div>
  </div>
</div>
