<div class="calc-height" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.2)), url(https://res.cloudinary.com/dgkabaqi8/image/upload/v1551271826/handskidsandadult.jpg)" id="banner-home">
    <div class="banner-content">
      <h1>Common Good</h1>
      <p>The best way to find your NGO</p>
      <div class="search">
        <%= form_tag search_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "searchbar my-searchbar",
          placeholder: "Find your next volunteer program"
          %>
          <i class="fa fa-search"></i>
        <% end %>
      </div>
    </div>
</div>
