<div class="col-xs-12 col-sm-6 col-md-4 centered">
  <% if mission.photos.present? %>
    <div class="card-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path mission.photos.first.photo, height: 300, width: 400, crop: :fill %>')">
    </div>
  <% else %>
    <div class="card-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://res.cloudinary.com/dgkabaqi8/image/upload/v1551885501/Common%20Good%20-%20Nice%20photos/volunteer.jpg')">
    </div>
  <% end %>
  <div class="card-info">
    <div class="texthome">
      <p id = "home"><%= link_to mission.title, mission_path(mission) %></p>
      <p id = "home"><%= mission.city%>, <%= mission.country %></p>
      <p id = "home">No rating</p>
    </div><!--    <i class="far fa-heart" id="biglove"></i> -->
  </div>
</div>
