<div class="wrapperm">
  <div class="banners calc-height" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    <div class="banners-content">
      <h1><%= @mission.title %></h1>
      <p><%= @mission.city %>  &#x1F4CD; | DATE</p>

      <div id="apply-btn">
        <% if @mission.users.include?(current_user)  %>
          <p>Application Sent</p>
        <% else %>
          <p>
            <%= link_to "Apply now", "/missions/#{@mission.id}/mission_users", method: 'post', remote: true %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container" id="main-container" style="display: flex">
  <div class="container" id="cards">
    <div class="col-sm-6">
        <div class="description"> Mission description
          <hr>
          <h2><%= @mission.description %></h2>
        </div>
        <div class="organization"> Learn more about the NGO
          <hr>
          <p><%= link_to @mission.organization.name, organization_path(@organization, mission_id: @mission.id) %></p>
        </div>
        <div class="languages"> Mission Language
          <hr>
          <h2><%= @mission.language %></h2>
        </div>
        <div class="skills">What do we need from you?
          <hr>
          <h2><%= @mission.skill %></h2>
        </div>

      </div>
  </div>
  <div id="map"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

