<div class="wrapperm">
  <div class="row">
    <div class="col-sm-12">
      <div>
        <% if @mission.photos.empty? %>
          <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://res.cloudinary.com/dgkabaqi8/image/upload/v1551277349/slide-2.jpg');">
            <h1><%= @mission.title %></h1>
          </div>

        <% else %>

          <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% @mission.photos.each_with_index do |photo, i| %>
                <div class="carousel-item <%= 'active' if i == 0 %>">
                  <%= cl_image_tag photo.photo, class: "d-block w-100"%>
                  <div class="carousel-caption d-none d-md-block">
                    <h1 class="title1"><%= @mission.title %></h1>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="missioncard">
          <div id="apply-btn">
            <% if @mission.users.include?(current_user)  %>
              <p>Application Sent</p>
            <% else %>
              <p>
                <%= link_to "Apply now", "/missions/#{@mission.id}/mission_users", method: 'post', class: 'btn btn-medium', remote: true %>
              </p>
            <% end %>
          </div>

        <div class="missioncard-category"></div>

        <div class="missioncard-description">
          <h2><%= @mission.title %></h2>
          <p><%= @mission.city %> &#x26F3;</p>
        </div>

        <img class="missioncard-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">

        <!-- <a class="missioncard-link" href="#" ></a> -->
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="gridb">
        <div class="bx1"> What you will be doing:
          <h5><%= @mission.description %></h5>
        </div>
        <div class="bx2"> Get more info about this NGO:
          <p><%= link_to @mission.organization.name, organization_path(@organization, mission_id: @mission.id) %></p>
        </div>
        <div class="bx3"> Languages
          <p><%= @mission.language %></p>
        </div>
        <div class="bx4">What we are looking for:
          <p><%= @mission.skill %></p>
        </div>
        <div class="bx5" id="map"
             style="width: 100%;
                    height: 300px;"
             data-markers="<%= @markers.to_json %>"
             data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>

