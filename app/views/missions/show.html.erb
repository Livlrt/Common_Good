<div class="wrapperm">
  <div class="row">
    <div class="col-sm-12">
      <div class="grida">
        <% if @mission.photo.present? %>
          <div class="box a" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @mission.photo, height: 300, width: 400, crop: :fill %>')">
        <% else %>
          <div class="box a" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://images.unsplash.com/photo-1536313243724-6dc3a26bee12?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1625&q=80')">
        <% end %>
        </div>
        <div class="box b">PHOTO 2</div>
      </div>
    </div>
  </div>
</div>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="missioncard">

            <%= link_to "Apply to this mission", new_mission_mission_user_path(@mission), class: "missioncard-btn" %>

        <div class="missioncard-category"></div>

        <div class="missioncard-description">
          <h2><%= @mission.title %></h2>
          <p><%= @mission.city %> &#x26F3;</p>
        </div>

        <img class="missioncard-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">

        <a class="missioncard-link" href="#" ></a>
        </div>
      </div>
    </div>
  </div>
</div>

