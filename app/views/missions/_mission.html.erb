<div class="col-12 col-md-6 centered">
  <% if mission.photos.any? %>
    <div class="card search-card" style="background-image: linear-gradient(180deg, rgba(51, 51, 51, 0) 0%,rgba(51, 51, 51, 0.4) 100%), url('<%= cl_image_path mission.photos, height: 300, width: 400, crop: :fill %>')">
      <div class="card-box-description">
        <div class="card-description text-center">
          <h3 id="card-title-description-search"><%= link_to mission.title, mission_path(mission) %></h3>
        </div>
        <div class="title-description-card">
            <p><%= mission.city%>, <%= mission.country %> - <%= mission.start_date%></p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="card search-card" style="background-image: linear-gradient(180deg, rgba(51, 51, 51, 0) 0%,rgba(51, 51, 51, 0.4) 100%), url('https://images.unsplash.com/photo-1527499456709-838ffdcfee3d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80')">
      <div class="card-box-description">
        <div class="card-description text-center">
          <h3 id="card-title-description-search"><%= link_to mission.title, mission_path(mission) %></h3>
        </div>
        <div class="title-description-card">
            <p><%= mission.city%>, <%= mission.country %> - <%= mission.start_date%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

