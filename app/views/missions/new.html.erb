<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2> Add your mission </h2>
      <%= simple_form_for([@organization, @mission]) do |f| %>
        <%= f.input :title, placeholder: 'Enter your title' %>
        <%= f.input :continent, collection: Mission::CONTINENT, as: :select %>
        <%= f.input :home_category, collection: Mission::HOME_CATEGORY, as: :select %>
        <%= f.country_select :country %>
        <%= f.input :description%>
        <%= f.input :great_for, collection: Mission::GREATFOR, as: :select%>
        <%= f.input :cost_of_life, collection: Mission::COSTOFLIFE, as: :select%>
        <%= f.input :tolerance%>
        <%= f.input :skill%>
        <%= f.input :city %>
        <%= f.input :climate, collection: Mission::CLIMATE, as: :select%>
        <%= f.input :safety, collection: Mission::SAFETY, as: :select%>
        <%= f.input :language, collection: Mission::LANGUAGE, as: :select%>
        <%= f.input :start_date%>
        <%= f.input :end_date%>

        <%= f.fields_for :photo do |ff| %>
          <%= ff.label :photo %>
          <%= ff.file_field :photo, multiple: true, name: "photos[]" %>
        <% end %>

        <hr>
        <%= f.submit class: "btn-medium"%>
        <%= link_to "Back", organization_path(@organization), class: 'btn btn-medium' %>
      <% end %>
      </div>
  </div>
</div>
